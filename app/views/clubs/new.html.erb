<div class="container bg-secondary mt-5">
  <h1>Add a new club</h1>
  <%= simple_form_for @club do |f| %>
    <div class="row">
      <div class="col-sm-6">
        <%= f.input :name, label: "Name" %>
      </div>
      <div class="col-sm-3">
        <%= f.input :capacity, label: "Capacity", as: :numeric %>
      </div>
      <div class="col-sm-3">
        <%= f.input :hourly_price, label: "Price per hour", as: :numeric %>
      </div>
    </div>
    <div class="row">
      <div class="col-sm">
        <%= f.input :address, label: "Address" %>
      </div>
    </div>
    <div class="row">
      <div class="col-sm">
        <%= f.input :description, label: "Description" %>
      </div>
    </div>
    <div class="row justify-content-around">
      <%= f.input :photo, as: :file %>
      <%= f.submit %>
    </div>
  <%end%>
</div>
  