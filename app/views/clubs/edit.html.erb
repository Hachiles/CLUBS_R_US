<div class="container mt-5" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://res.cloudinary.com/hachiles/image/upload/v1605601697/pexels-mark-angelo-1587927_ytlhoq.jpg);">
  <h1>Edit <%= @club.name %></h1>
    <%= simple_form_for @club do |f| %>
      <%= f.input :name, label: "Name" %>
      <%= f.input :capacity, label: "Capacity", as: :numeric %>
      <%= f.input :hourly_price, label: "Price per hour", as: :numeric %>
      <%= f.input :address, label: "Address" %>
      <%= f.input :description, label: "Description" %>
      <%= f.submit %>
    <% end %>
</div>