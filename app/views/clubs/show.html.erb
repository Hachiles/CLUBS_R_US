<div class="container mt-5">
    <% if @club.photo.attached? %>
    <div class="d-flex justify-content-center">
      <%= cl_image_tag @club.photo.key, height: 300, width: 690, crop: :fill %>
    </div>
    <% end %>
  
  <div class="row">
    <div class="col border">
      <h1 class="header-white text-center"><%= @club.name %></h1>
      <div class="d-flex justify-content-center">
        <% if policy(@club).edit? %>
          <%= link_to  "Edit #{@club.name}", edit_club_path, class:'button-green' %> <br>
        <% end %>
        <% if policy(@club).destroy? %>
          <%= link_to "Delete #{@club.name}", club_path, class:'button-orange', method: :delete, data: { confirm: "Are you sure?" } %>
        <% end %>
      </div> <br>

      <ul class="show-page-list text-center">
        <li>Capacity: <%= @club.capacity %></li>
        <li>Price per hour: <%= @club.hourly_price %>â‚¬</li>
        <li>Address: <%= @club.address %></li>
        <li>Description: <%= @club.description %></li>
      </ul>
      <div class="d-flex justify-content-center">
        <%= link_to "Back to the club list", clubs_path, class:'button-magenta' %>
      </div>
    </div>
    <div class="col border">
      <% if @club.user_id != current_user.id %>
        <div class="container">
          <h1>Book <%= @club.name %></h1>
          <%= simple_form_for [@club, @booking] do |f| %>
            <%= f.input :start_time, label: "Start date" %>
            <%= f.input :duration, label: "Duration (h)" %>
            <%= f.submit %>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>

 
  <div id="map"
    style="width: 100%; height: 600px;"
    data-markers="<%= @marker.to_json %>"
    data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
  </div>

</div>
